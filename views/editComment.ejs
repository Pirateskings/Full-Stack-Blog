<%- include('partials/header', { title: 'Edit Comment' , user: user }) %>

  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center text-primary">Edit Comment</h2>
      <form action="/comments/<%= comment._id %>?_method=PUT" method="POST" class="mt-3">

        <% if (error) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
          <% } %>

            <% if (success) { %>
              <div class="alert alert-success">
                <%= success %>
              </div>
              <% } %>

                <div class="form-group">
                  <label for="content" class="fw-bold">Your Comment</label>
                  <textarea id="content" name="content" class="form-control" rows="4"
                    required><%= comment.content %></textarea>
                </div>

                <div class="text-center mt-3">
                  <button type="submit" class="btn btn-primary px-4">Update Comment</button>
                </div>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>